<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>chatConf - Login</title>
    <link rel="stylesheet" href="/css/loginStyles.css">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <script src="/js/jquery-2.1.4.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

</head>

<body>
<div class="container">
    <section>
        <div class="login-container">
            <div class="user signinBx" >
                <div class="imgBx"><img src="/imgs/signinbackground.jpg"></img></div>
                <div class="formBx">
                    <form>
                        <h2>Sign In</h2>
                        <input id="email" type="email" name="email" placeholder="Email Address"/>
                        <input id="password" type="password" name="password" placeholder="Password"/>
                        <div onChange="radioVal(event)" class="d-flex justify-content-center">
                            <label htmlFor="" class="px-2">
                                <input  type="radio" value="Lawyer" name="Meeting" required/>
                                Lawyer
                            </label>
                            <label htmlFor="" class="px-2">
                                <input  type="radio" value="Police" name="Meeting" required/>
                                Police
                            </label>
                            <label htmlFor="" class="px-2">
                                <input  type="radio" value="Judge" name="Meeting"/>
                                Judge
                            </label>
                            <label htmlFor="" class="px-2">
                                <input  type="radio" value="User" name="Meeting"/>
                                User
                            </label>
                        </div>
                        <input type="submit" onClick="signIn()" class="" name="" value="Login"/>
                        <p class="singup">Dont have an Account? <a href="#" class="signUp">Sign Up</a></p>
                    </form>
                </div>
            </div>
            <div class="user signupBx" id="signInBx">
                <div class="formBx">
                    <form>
                        <h2>Create an Account</h2>
                        <input type="text" id="name" name="name" placeholder="Name"required/>
                        <input type="email" id="emailId" name="email" placeholder="Email Address" required/>
                        <input type="password" id="pass" name="password" placeholder="Password"required/>
                        <div onChange="radioVal(event)" class="d-flex justify-content-center">
                            <label htmlFor="" class="px-2">
                                <input  type="radio" value="Lawyer" name="Meeting" required/>
                                Lawyer
                            </label>
                            <label htmlFor="" class="px-2">
                                <input  type="radio" value="Police" name="Meeting"/>
                                Police
                            </label>
                            <label htmlFor="" class="px-2">
                                <input  type="radio" value="Judge" name="Meeting"/>
                                Judge
                            </label>
                            <label htmlFor="" class="px-2">
                                <input  type="radio" value="User" name="Meeting"/>
                                User
                            </label>
                        </div>
                        <input type="submit" onClick="register()" value="Sign Up"/>
                        <p class="singup">Already have an Account? <a href="#" class="signIn">Sign In</a></p>
                    </form>
                </div>
                <div class="imgBx"><img src="/imgs/signupbackground.jpg"></img></div>
            </div>

        </div>

    </section>
</div>


</body>
<script src="/js/scripts.js"></script>
<script>
    $(document).ready(function(){
        document.querySelector('.signUp').addEventListener('click',function()
        {
            document.querySelector('.login-container').classList.toggle('active')
        });

        document.querySelector('.signIn').addEventListener('click',function()
        {
            document.querySelector('.login-container').classList.toggle('active')
        });

    });
</script>
</html>
